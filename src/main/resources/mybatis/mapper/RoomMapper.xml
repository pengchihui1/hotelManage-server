<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.guest.mapper.RoomMapper">
   
    <!-- 使用resultMap可以处理属性名称和数据库列名不一致的问题 -->
	<!--  
	<resultMap type="UserMailVo" id="result">
		<result property = "userId" column = "userid" />
		<result property = "userName" column = "username" />
		<result property = "signFlag" column = "sign_flag" />
	</resultMap>
	-->
   
   	<select id="getById" resultType="Room" >
	  select * from room where room_id = #{id}
	</select>
 
    <select id="getRoomsByType" parameterType="string" resultType="room">
        select * from room where rank = #{rank};
    </select>
    
    <insert id="insert" parameterType="Room" >
       insert into room(
	    room_id,
	    size,
	    rank,
	    rent,
	    earnest,
	    max_num,
	    position
	    )VALUES (
	      #{roomId},
	      #{size},
		  #{rank},
		  #{rent},
		  #{earnest},
		  #{maxNum},
		  #{position}
	    )
    </insert>
   
    <update id="update" parameterType="Room" >
	    update room
	    set size = #{size}, 
	    rank= #{rank},
	    rent= #{rent},
	    earnest= #{earnest},
	    max_num= #{maxNum},
	    position= #{position},
	    where room_id = #{roomId}
	</update>
    
    <delete id="deleteById" parameterType="string">
        delete from room where room_id = #{id};
    </delete>
   
</mapper>
